	</language-switcher-settings>
    <custom-fields>
        <custom-field action="copy">kingsize_disable_learn_more_link</custom-field>
		<custom-field action="copy">kingsize_show_title_and_discription</custom-field>
    </custom-fields>
    <custom-types>
        <custom-type translate="1">portfolio</custom-type>
		<custom-type translate="1">slider</custom-type>
		<custom-type translate="1">galleries</custom-type>
    </custom-types>
    <taxonomies>
        <taxonomy translate="1">portfolio-tags</taxonomy>
        <taxonomy translate="1">portfolio-category</taxonomy>
		<taxonomy translate="1">slider-category</taxonomy>
    </taxonomies>
    <admin-texts>
        <key name="wm_theme_settings">
            <key name="wm_read_more_text"/>
            <key name="wm_contact_email_template"/>
            <key name="wm_custom_404_title"/>
